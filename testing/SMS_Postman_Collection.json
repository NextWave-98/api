{
  "info": {
    "name": "QuickSend SMS Gateway API",
    "description": "Complete SMS Gateway integration with QuickSend for LTS API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "SMS Management",
      "item": [
        {
          "name": "Send Single SMS (POST)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"to\": \"0771234567\",\n  \"msg\": \"Test SMS from LTS System - Your order has been confirmed!\",\n  \"senderID\": \"LTSSystem\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/sms/send-single",
              "host": ["{{base_url}}"],
              "path": ["api", "sms", "send-single"]
            },
            "description": "Send a single SMS to one recipient using POST method"
          }
        },
        {
          "name": "Send Single SMS (GET)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/sms/send-single-get?to=0771234567&msg=Test SMS via GET&senderID=LTSSystem",
              "host": ["{{base_url}}"],
              "path": ["api", "sms", "send-single-get"],
              "query": [
                {
                  "key": "to",
                  "value": "0771234567"
                },
                {
                  "key": "msg",
                  "value": "Test SMS via GET"
                },
                {
                  "key": "senderID",
                  "value": "LTSSystem"
                }
              ]
            },
            "description": "Send a single SMS using GET method (useful for simple integrations)"
          }
        },
        {
          "name": "Check SMS Cost (Bulk Same)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"to\": [\n    \"0771234567\",\n    \"0701234567\",\n    \"0751234567\"\n  ],\n  \"msg\": \"Special offer - 20% discount on all products this weekend!\",\n  \"senderID\": \"LTSSystem\",\n  \"checkCost\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/sms/send-bulk-same",
              "host": ["{{base_url}}"],
              "path": ["api", "sms", "send-bulk-same"]
            },
            "description": "Check the cost of sending bulk SMS before actually sending"
          }
        },
        {
          "name": "Send Bulk SMS (Same Message)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"to\": [\n    \"0771234567\",\n    \"0701234567\",\n    \"0751234567\"\n  ],\n  \"msg\": \"Special offer - 20% discount on all products this weekend! Visit us today.\",\n  \"senderID\": \"LTSSystem\",\n  \"checkCost\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/sms/send-bulk-same",
              "host": ["{{base_url}}"],
              "path": ["api", "sms", "send-bulk-same"]
            },
            "description": "Send the same message to multiple recipients (up to 10,000)"
          }
        },
        {
          "name": "Send Bulk SMS (Different Messages)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"msgList\": [\n    {\n      \"to\": \"0771234567\",\n      \"msg\": \"Dear John, your laptop repair is complete. Please collect from Main Branch.\"\n    },\n    {\n      \"to\": \"0701234567\",\n      \"msg\": \"Dear Sarah, your mobile phone is ready for pickup. Thanks for choosing us!\"\n    },\n    {\n      \"to\": \"0751234567\",\n      \"msg\": \"Dear Mike, your warranty claim has been approved. Ref: WC-2024-001\"\n    }\n  ],\n  \"senderID\": \"LTSSystem\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/sms/send-bulk-different",
              "host": ["{{base_url}}"],
              "path": ["api", "sms", "send-bulk-different"]
            },
            "description": "Send different messages to different recipients (up to 20)"
          }
        },
        {
          "name": "Check SMS Balance",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/sms/balance",
              "host": ["{{base_url}}"],
              "path": ["api", "sms", "balance"]
            },
            "description": "Check current SMS account balance and available credits"
          }
        }
      ]
    },
    {
      "name": "SMS Logs & Analytics",
      "item": [
        {
          "name": "Get All SMS Logs",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/sms/logs?limit=50&offset=0",
              "host": ["{{base_url}}"],
              "path": ["api", "sms", "logs"],
              "query": [
                {
                  "key": "limit",
                  "value": "50"
                },
                {
                  "key": "offset",
                  "value": "0"
                }
              ]
            },
            "description": "Retrieve SMS sending history with pagination"
          }
        },
        {
          "name": "Get SMS Logs by Type",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/sms/logs?type=SALE_CONFIRMATION&limit=20",
              "host": ["{{base_url}}"],
              "path": ["api", "sms", "logs"],
              "query": [
                {
                  "key": "type",
                  "value": "SALE_CONFIRMATION",
                  "description": "Options: SALE_CONFIRMATION, PAYMENT_RECEIVED, JOBSHEET_CREATED, JOBSHEET_COMPLETED, WARRANTY_REMINDER, CUSTOM"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            },
            "description": "Filter SMS logs by template type"
          }
        },
        {
          "name": "Get Failed SMS",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/sms/logs?status=FAILED&limit=20",
              "host": ["{{base_url}}"],
              "path": ["api", "sms", "logs"],
              "query": [
                {
                  "key": "status",
                  "value": "FAILED",
                  "description": "Options: SUCCESS, FAILED, PENDING"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            },
            "description": "Get list of failed SMS for troubleshooting"
          }
        },
        {
          "name": "Search SMS by Recipient",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/sms/logs?recipient=0771234567",
              "host": ["{{base_url}}"],
              "path": ["api", "sms", "logs"],
              "query": [
                {
                  "key": "recipient",
                  "value": "0771234567"
                }
              ]
            },
            "description": "Find all SMS sent to a specific phone number"
          }
        },
        {
          "name": "Get SMS Logs by Date Range",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/sms/logs?startDate=2024-12-01&endDate=2024-12-31",
              "host": ["{{base_url}}"],
              "path": ["api", "sms", "logs"],
              "query": [
                {
                  "key": "startDate",
                  "value": "2024-12-01",
                  "description": "ISO date format"
                },
                {
                  "key": "endDate",
                  "value": "2024-12-31",
                  "description": "ISO date format"
                }
              ]
            },
            "description": "Filter SMS logs by date range"
          }
        },
        {
          "name": "Get SMS Statistics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/sms/stats",
              "host": ["{{base_url}}"],
              "path": ["api", "sms", "stats"]
            },
            "description": "Get overall SMS usage statistics and analytics"
          }
        },
        {
          "name": "Get Monthly SMS Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/sms/stats?startDate=2024-12-01&endDate=2024-12-31",
              "host": ["{{base_url}}"],
              "path": ["api", "sms", "stats"],
              "query": [
                {
                  "key": "startDate",
                  "value": "2024-12-01"
                },
                {
                  "key": "endDate",
                  "value": "2024-12-31"
                }
              ]
            },
            "description": "Get SMS statistics for a specific month"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "your-jwt-token-here",
      "type": "string"
    }
  ]
}
